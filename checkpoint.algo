ALGORITHM algorithm_name
VAR
 input : CHAR :=""
 characters : INTEGER:=0
 words : INTEGER:=0
 vowels : INTEGER:=0
BEGIN
WHILE (input <> ".") DO
    read(input)
    characters = characters + 1

 IF (input = " " OR input = ".") THEN
    words = words + 1
 END_IF

 IF (input = ["a","e","u","i","o","y"]) THEN
    vowels = vowels + 1
   
 END_IF
 
END_WHILE
END